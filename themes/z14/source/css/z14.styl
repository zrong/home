// desktop max width
desktopWidth = 760px
mdDesktopWidth = 860px
lgDesktopWidth = 960px
// content margin site on desktop
marginBorder = 10px
opacityValue = 0.85
// mobile max width
mobileMaxWidth = 480px
mobileOpacityValue = 0.95
codeFontFamily = Consolas, Monaco, Courier New, Lucida Console

body
  background-color: #34495E
  margin: 0px
  font-family: Lato, "Microsoft Jhenghei", "Hiragino Sans GB", "Microsoft YaHei", sans-serif
  font-size: 18px
  @media (max-width: mdDesktopWidth)
    font-size: 16px

article
  line-height: 1.5em

.highlight
  line-height: 1.25em

a
  text-decoration: none
  color: #3A539B
  &:hover
    // background-color: #1E8BC3
    // color: #fff
    text-decoration: underline

#outer-container
  position: absolute;
  left: 50%;
  width: lgDesktopWidth;
  margin-left: - (lgDesktopWidth / 2);
  @media (max-width: lgDesktopWidth) {
    width: mdDesktopWidth;
    margin-left: - (mdDesktopWidth / 2);
  }
  @media (max-width: mdDesktopWidth) {
    width: desktopWidth;
    margin-left: - (desktopWidth / 2);
  }
  // box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, .55);
  box-shadow: 0 0 2.5em #5d656c;

#menu-outer, #container
  background-color: #fff

#menu-outer, #bottom-outer, #z14-index
  opacity: opacityValue;

#container
  margin-top: 50px;

#content-outer
  padding: marginBorder;

#bottom-outer
  color: #888;
  text-align: center;
  padding: marginBorder;
  padding-top: 40px;
  background-color: #fff;
  font-size: 14px;
  @media (max-width: lgDesktopWidth)
    font-size: 12px;

#z14-index
  margin: 20px
  padding-bottom: 20px
  text-align: center
  border-radius: 10px
  background-color: #ecf0f1
  hr
    width: 75%;
    color: #7f8c8d;
    margin: 0px auto;
  a
    padding: 5px;
  .index-nav-link
    list-style: none;
    padding: 5px 0px 5px 0px;
    li
      display: inline;
      padding-left: 5px;
  .index-news-link
    li
      padding-left: 1em;
      list-style: none;
      text-align: left
      a
        color: #999
        // font-size: 12px
  .title
    font-size: 28px;
    font-weight: 900;
    font-color: #34495e;
    text-shadow: 0 2px rgb(127, 140, 141);
    padding-bottom: 5px;
    cursor: pointer;
    a
      color: #34495e
      &:hover
        color: #34495e;
        text-decoration: none;
        background-color: transparent;

.z14-center
  position: absolute
  top: 50%
  left: 50%
  margin-top: -200px
  width: lgDesktopWidth
  margin-left: - (lgDesktopWidth / 2)
  @media (max-width: lgDesktopWidth) {
    width: mdDesktopWidth
    margin-left: - (mdDesktopWidth / 2)
  }
  @media (max-width: mdDesktopWidth) {
    width: desktopWidth
    margin-left: - (desktopWidth / 2)
  }

#menu-inner
  line-height: 50px;
  height: 49px;
  border-bottom: 1px solid #ddd;
  // height: 20px;
  padding: 0px marginBorder 0 marginBorder;
  width: lgDesktopWidth - marginBorder * 2;
  .left
    float: left;
  #homelink
    line-height: 32px;
    display: inline-block;
  #brand
    // margin: 0px;
    float: left;
    // display: inline-block;
    vertical-align: middle;
    cursor: pointer;
    a
      top: 0;
      color: #000;
      &:hover
        background-color: #fff;
        text-decoration: none;
  @media (max-width: lgDesktopWidth)
    width: mdDesktopWidth - marginBorder * 2;
  @media (max-width: mdDesktopWidth)
    width: desktopWidth - marginBorder * 2;

#show-menu
  display: none;
  // position: static;
  // text-align: right;
  float: right;
  // margin-right: 10px;
  button
    background-color: #EEE;
    border: 1px #444 solid;
    padding: 6px;
    position: static;
    right: 0;
    left: auto;

#menu-list
  line-style: none;
  display: inline-block;
  float: right;
  padding-left: 0px;
  ul
    margin: 0px;
    li
      padding: 5px;
      margin: 5px;
      text-align: center;
      display: inline;
      &.active
        font-weight: 900;
        a
          color: #000;
      &:hover
        font-weight: 900;
      a
        text-decoration: none;

#menu-outer
  margin: 0px;
  padding: 0px;
  position: fixed;
  z-index: 1;
  transition-property: all;
  transition-duration: .5s;
  transition-timing-function: cubic-bezier(0, 1, 0.5, 1);

#menu-outer #avatar
  border-radius: 50%;
  border: 2px wihte solid;
  box-shadow: 0 0px 3px 1px rgba(0,0,0,0.3);
  vertical-align: middle;
  width: 32px;
  height: 32px;

.center-field
  margin: 0 auto

.avatar
  cursor: pointer;
  margin-top: -70px;
  border: 2px solid white;
  border-radius: 50%;
  background-color: #ecf0f1;
  box-shadow: 0 0px 3px 1px rgba(0,0,0,0.3);

.slide-up
  top: -50px;

.slide-down
  top: 0;

.social
  padding-left: 0px;
  li
    display: inline;
    a
      color: gray;
      &:hover
        text-decoration: none;
      i
        font-size: 25px;

.douban:hover
  color: #072;
.twitter:hover
  color: #1da1f2;
.linkedin:hover
  color: #333;
.weibo:hover
  color: #fa7d3c;
.google-plus:hover
  color: #d73d32;
.facebook:hover
  color: #0e385f;
.dribbble:hover
  color: #ea4c89;
.github:hover
  color: #4078c0;
.coding:hover
  color: #000;
.npmjs:hover
  color: #cb3837;
.youtube:hover
  color: #cc181e;
.zhihu:hover
  color: #0e78e7;
.lofter:hover
  color: #444;
.quora:hover
  color: #b92b27;
.rss:hover
  color: #D35400;
.jian:hover
  color: #de533a;
.instagram:hover
  color: #fd1d1d;
.stackoverflow:hover
  color: #f48024;
.segmentfault:hover
  color: #005f3c;

article img
  max-width: lgDesktopWidth - marginBorder * 2;
  @media (max-width: lgDesktopWidth)
    max-width: mdDesktopWidth - marginBorder * 2;
  @media (max-width: mdDesktopWidth)
    max-width: desktopWidth - marginBorder * 2;

// mobile
@media (max-width: desktopWidth)
  #outer-container,.z14-center,#menu-outer
    width: 100%;
  #outer-container
    left: 0%;
    margin-left: 0px;
  #menu-inner
    width: 95%;
    padding: 0 2%;
  .post-title-item
    margin-left: 3px;
  #show-menu
    display: inline-block;
  article img
    width: 95%
  #menu-list
    display: none;
    position: absolute;
    margin-top: 50px;
    background-color: #FFF;
    opacity: opacityValue;
    width: 100%;
  #menu-list ul
    padding-left: 0px;
  #menu-list ul li
    text-align: center;
    display: block;
  .highlight
    margin-left: 0px;
    margin-right: 0px;
  // #user-card
    // width: 200px;
@media (max-width: mobileMaxWidth)
  .z14-center
    position: static;
    left: 0;
    margin-left: 0px;
    width: 100%;
    margin-top: 30%;
  #z14-index .index-nav-link li
    display: block;
    // padding: 0px 0px;
  #bottom-outer, #z14-index
    opacity: mobileOpacityValue;
  #menu-outer
    opacity: mobileOpacityValue;

@media (max-height: 480px)
  .z14-center
    position: static;
    top: 0;
    left: 0;
    margin-left: 0px;
    margin-top: 95px;
    width: 100%;
  #z14-index .index-nav-link li
    display: block;
    padding: 0px 0px;

@media (max-height: 320px)
  .z14-center
    margin-top: 75px;
